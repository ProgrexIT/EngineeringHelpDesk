@model Help_Desk_2.Models.Ticket

@{
    ViewBag.Title = "Ticket: TMP" + Model.ID;
    
}

<h2>@ViewBag.Title <span class="summary-top pull-right">@Html.DisplayFor(model => model.status)</span></h2>
<p class="text-muted">Created by @Html.DisplayFor(model => model.UserProfile.displayName) on @Html.DisplayFor(model => model.dateComposed)</p>
<hr class="title"/>
<div>
    
    
    <dl class="dl-horizontal">
        

        <dt>
            @Html.DisplayNameFor(model => model.headerText)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.headerText)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.dateSubmitted)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dateSubmitted)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.adminEmail)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.adminEmail)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.dateL1Release)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dateL1Release)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.dateL2Release)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dateL2Release)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.sanityCheck)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sanityCheck)
        </dd>

    </dl>
    <!--Attachment section-->
    <div class="form-custom">
        @Html.Label("Attachments", htmlAttributes: new { @class = "control-label" })
        @if (Model.Files != null && Model.Files.Count > 0)
            {
                foreach (var t in Model.Files)
                {
                <div>@t.fileName</div>
            }
        }
        <input type="file" name="file1" class="file" data-show-upload="false" data-show-preview="false" />
    </div>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
