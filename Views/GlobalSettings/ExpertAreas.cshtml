@model IPagedList<Help_Desk_2.Models.WordList>

@{
    string actionName = ViewContext.RouteData.Values["action"].ToString().ToLower();
    ViewBag.Title = (actionName == "expertareasdeleted" ? "Deleted " : "") + "Expert Areas";
    Help_Desk_2.Utilities.AllSorts.setNavProperties(ViewBag,true);
}

<h2>@ViewBag.Title&nbsp;
    @if (actionName == "expertareas")
    {
        @Html.ActionLink("View deleted Expert Areas", "ExpertAreasDeleted", null, new { @class = "btn btn-default" })
    }
    else
    {
        @Html.ActionLink("View live Expert Areas", "ExpertAreas", null, new { @class = "btn btn-default" })
    }
</h2>

<div class="container-view expertareas">
    @if (Model.ItemEnd == 0 && actionName == "expertareasdeleted")
    {
        <p>No deleted expert areas</p>
    }
    else {
    <table class="table">
        <tr>
            <th>
                Expert Area Name
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.text
                </td>
                <td>@if (actionName != "expertareasdeleted")
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID })  
                    @Html.Raw(" | ")
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                }
                else {
                @Html.ActionLink("UnDelete", "UnDelete", new { id = item.ID })
                }
                </td>
            </tr>
        }
        @if (actionName != "expertareasdeleted")
        {
            using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()
            <tr>
                <td>
                    <div class="form-group">
                        @Html.Hidden("type", "2")
                        <input class="form-control text-box single-line" data-val="true" data-val-length="The field text must be a string with a maximum length of 30." data-val-length-max="30" data-val-required="The text field is required." id="text" name="text" type="text" value="" placeholder="New keyword">
                        <span class="field-validation-valid text-danger" data-valmsg-for="text" data-valmsg-replace="true"></span>
                    </div>
                </td>
                <td>
                    <input type="submit" value="Add Expert Area" class="btn btn-default" />
                </td>
            </tr>
            }
        }
    </table>
    }
</div>
@if (Model.ItemEnd > 0) { 
    <div class="pager">
        @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount).Options(o => o.AddRouteValue("searchType", @Request.QueryString["searchType"])
                .AddRouteValue("searchStr", @Request.QueryString["searchStr"])
                .DisplayFirstAndLastPage()
                .SetFirstPageText("First")
                .SetLastPageText("Last")
                .SetPreviousPageText("Prev")
                .SetNextPageText("Next"))

        <div class="text-muted">Displaying @Model.ItemStart - @Model.ItemEnd of @Model.TotalItemCount</div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}