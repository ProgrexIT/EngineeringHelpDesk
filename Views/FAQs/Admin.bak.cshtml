@using Help_Desk_2.Utilities;
@model IEnumerable<Help_Desk_2.Models.KnowledgeFAQ>

@{
    ViewBag.Title = "FAQs";
    Session["lastView"] = Request.Url.PathAndQuery;    //Record this as last view

}

<header>
    <h2 class="title">@ViewBag.Title<span class="summary-top pull-right">@Html.ActionLink("New FAQ", "New", null, htmlAttributes: new { @class = "btn btn-primary" })</span></h2>
</header>

<div class="container-view">
    
    <form class="form-inline" >
        <div class="form-group">
            <label for="searchType">Filter by: </label>
            <select class="form-control" id="searchType" name="searchType">
                
                <option value="" @if (ViewBag.selectedOption == "") { @Html.Raw(" selected")}>Unpublished</option>
                <option value="1"  @if (ViewBag.selectedOption == "1") { @Html.Raw(" selected")}>Expired</option>
                <option value="2"  @if (ViewBag.selectedOption == "2") { @Html.Raw(" selected")}>Published</option>
                <option value="3"  @if (ViewBag.selectedOption == "3") { @Html.Raw(" selected")}>All</option>
               
            </select>
        </div>
        <div class="form-group">
            <label for="searchType">Free text: </label>
            <input type="text" class="form-control" id="searchStr" name="searchStr" placeholder="Enter search text" value="@ViewBag.displayMessage">
        </div>
        <button type="submit" class="btn btn-default">Filter</button>
    </form>
</div>

<div class="container-view">
    <table class="table table-bordered table-hover table-condensed table-view">
        <thead>
            <tr>
                <th>@Html.DisplayName("Question")</th>
                <th>@Html.DisplayNameFor(model => model.UserProfile.displayName)</th>
                <th>@Html.DisplayNameFor(model => model.dateComposed)</th>
                <th>@Html.DisplayNameFor(model => model.expiryDate)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr onclick="$(location).attr('href', '@Url.Action("Details", "FAQs", new { @id = item.ID })')">

                    <td>@Html.DisplayFor(modelItem => item.headerText)</td>
                    <td>@Html.DisplayFor(model => item.UserProfile.displayName)</td>
                    <td>@Html.DisplayFor(modelItem => item.dateComposed)</td>
                    <td>@Html.DisplayFor(modelItem => item.expiryDate)</td>
                </tr>
            }
        </tbody>
    </table>
</div>


