From: @Html.Raw(ViewBag.From)
To: @ViewBag.To
@if(ViewBag.CC != "") { Html.Raw("CC: " + ViewBag.CC); }
Subject: @ViewBag.Subject
Content-Type: text/html; charset=utf-8

<html>
    <body>
        @{
            var baseURL = System.Configuration.ConfigurationManager.AppSettings["BaseURL"];
            var url1 = Url.Action("Details/" + ViewBag.id, "Ticket");
            ViewBag.link = "<a href='" + baseURL + url1 + "'>" + url1 + "</a>";
        }
        @if (ViewBag.type == "Submitted")
        {
            <p>Hi Ticket Administrators,</p>
            <p>A new ticket <strong>@ViewBag.title</strong> has been submitted for your attention.</p>
            <p>You can access this ticket at @Html.Raw(ViewBag.link)</p>
        }
        else if (ViewBag.type == "Assigned")
        {
            <p>Hi @ViewBag.user,</p>
            <p>A new ticket <strong>@ViewBag.title</strong> has been assigned to you.</p>
            <p>You can access this ticket at @Html.Raw(ViewBag.link)</p>
        }
        else if (ViewBag.type == "Returned")
        {
            <p>Hi Ticket Administrators,</p>
            <p>A new ticket <strong>@ViewBag.title</strong> has been returned to you.</p>
            <p>You can access this ticket at @Html.Raw(ViewBag.link)</p>
        }
        else if (ViewBag.type == "Completed")
        {
            <p>Hi @ViewBag.user,</p>
            <p>Your ticket <strong>@ViewBag.title</strong> has been completed.</p>
            <p>You can access this ticket at @Html.Raw(ViewBag.link)</p>
        }

        <p><b>System Message</b></p>
    </body>
</html>