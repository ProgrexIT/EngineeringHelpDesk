From: Eng Helpdesk System <patrice.elias@gmail.com>
To: @ViewBag.To
@if (ViewBag.CC != "") { Html.Raw("CC: " + ViewBag.CC); }
Subject: @ViewBag.Subject
Content-Type: text/html; charset=utf-8

<html>
    <body>
        @{
            ViewBag.link = "<a href='" + Url.Action("Details/" + ViewBag.id, "FAQs")
                + "'>" + Url.Action("Details/" + ViewBag.id, "FAQs") + "</a>";
        }
        @if (ViewBag.type == "Submitted")
        {
            <p>Hi FAQ Approvers,</p>
            <p>A new FAQ article <strong>@ViewBag.title</strong> has been submitted for your consideration.</p>
            <p>You can access this article at @ViewBag.link</p>
        }
        else if (ViewBag.type == "Approved")
        {
            <p>Hi @ViewBag.user,</p>
            <p>Your FAQ article <strong>@ViewBag.title</strong> has been approved!</p>
            <p>You can access this article at @ViewBag.link</p>
        }
        <p><b>System Message</b></p>
    </body>
</html>
